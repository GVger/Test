<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/lrc_background"
        android:layout_weight="1"
        android:orientation="vertical" >

        <cn.vger.service.LrcView
            android:id="@+id/lrc_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lrc_skin_object"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/console"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lrc_tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/lrc_sbProgress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="0" />

            <TextView
                android:id="@+id/lrc_tvAllTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/lrc_ivSinger"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:contentDescription="@string/main_def_singer_description"
                android:src="@drawable/main_iv_singer_def" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lrc_tvSongName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/main_def_tv_song_name"
                    android:textColor="#ff0000ff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lrc_tvSinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/main_def_tv_singer"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/lrc_btnPrevious"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_previous_skin" />

            <Button
                android:id="@+id/lrc_btnPlayAndPause"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_play_skin" />

            <Button
                android:id="@+id/lrc_btnNext"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_next_skin" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>